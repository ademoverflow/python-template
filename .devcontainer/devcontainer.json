{
	"name": "python-template dev container",
	// We run this command to dynamically set environment variables that docker-compose
	// uses in its configuration before running Docker containers.
	"initializeCommand": "make generate_env",
	"dockerComposeFile": "../docker-compose.dev.yml",
	"service": "python-template",
	"workspaceFolder": "/home/antipodestudios/code",
	"overrideCommand": true,
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.isort",
				"ms-azuretools.vscode-docker",
				"njpwerner.autodocstring",
				"tamasfe.even-better-toml"
			]
		}
	}
}